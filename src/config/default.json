      "/sources/dnd/free-rules/creating-a-character": "players-handbook/03-chapter-2-creating-a-character.html",
      "/sources/dnd/free-rules/character-classes": "players-handbook/04-chapter-3-character-classes.html",
      "/sources/dnd/free-rules/character-origins": "players-handbook/06-chapter-4-character-origins.html",
      "/sources/dnd/free-rules/feats": "players-handbook/07-chapter-5-feats.html",
      "/sources/dnd/free-rules/equipment": "players-handbook/08-chapter-6-equipment.html",
      "/sources/dnd/free-rules/spells": "players-handbook/09-chapter-7-spells.html",
      "/sources/dnd/br-2024/playing-the-game": "players-handbook/02-chapter-1-playing-the-game.html",
      "/sources/dnd/br-2024/creating-a-character": "players-handbook/03-chapter-2-creating-a-character.html",
      "/sources/dnd/br-2024/character-classes": "players-handbook/04-chapter-3-character-classes.html",
      "/sources/dnd/br-2024/character-origins": "players-handbook/06-chapter-4-character-origins.html",
