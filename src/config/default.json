{
  "input": {
    "directory": "./input",
    "pattern": "**/*.html",
    "encoding": "utf-8"
  },
  "output": {
    "directory": "./output",
    "overwrite": true,
    "extension": ".md",
    "createIndex": true
  },
  "ids": {
    "length": 4,
    "characters": "abcdefghijklmnopqrstuvwxyz0123456789"
  },
  "markdown": {
    "headingStyle": "atx",
    "codeBlockStyle": "fenced",
    "emphasis": "_",
    "strong": "**",
    "bulletMarker": "-",
    "linkStyle": "inlined",
    "linkReferenceStyle": "full",
    "horizontalRule": "---",
    "lineBreak": "  ",
    "codeFence": "```",
    "preformattedCode": false
  },
  "html": {
    "contentSelector": ".p-article-content",
    "removeSelectors": []
  },
  "images": {
    "download": true,
    "formats": ["png", "jpg", "jpeg", "webp", "gif"],
    "maxSize": 10485760,
    "timeout": 30000,
    "retries": 3
  },
