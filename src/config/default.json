{
  "input": {
    "directory": "./input",
    "pattern": "**/*.html",
    "encoding": "utf-8"
  },
  "output": {
    "directory": "./output",
    "overwrite": true,
    "extension": ".md",
    "createIndex": true
  },
  "ids": {
    "length": 4,
    "characters": "abcdefghijklmnopqrstuvwxyz0123456789"
  },
  "markdown": {
    "headingStyle": "atx",
    "codeBlockStyle": "fenced",
    "emphasis": "_",
    "strong": "**",
    "bulletMarker": "-",
    "linkStyle": "inlined",
    "linkReferenceStyle": "full",
    "horizontalRule": "---",
    "lineBreak": "  ",
    "codeFence": "```",
    "preformattedCode": false
  },
  "html": {
    "contentSelector": ".p-article-content",
    "removeSelectors": []
  },
  "images": {
    "download": true,
    "formats": ["png", "jpg", "jpeg", "webp", "gif"],
    "maxSize": 10485760,
    "timeout": 30000,
    "retries": 3
  },
  "links": {
    "resolveInternal": true,
    "fallbackToBold": true,
    "urlMapping": {
      "/sources/dnd/phb-2024/playing-the-game": "players-handbook/02-chapter-1-playing-the-game.html",
      "/sources/dnd/phb-2024/creating-a-character": "players-handbook/03-chapter-2-creating-a-character.html",
      "/sources/dnd/phb-2024/character-classes": "players-handbook/04-chapter-3-character-classes.html",
      "/sources/dnd/phb-2024/character-origins": "players-handbook/06-chapter-4-character-origins.html",
      "/sources/dnd/phb-2024/feats": "players-handbook/07-chapter-5-feats.html",
      "/sources/dnd/phb-2024/equipment": "players-handbook/08-chapter-6-equipment.html",
      "/sources/dnd/phb-2024/spells": "players-handbook/09-chapter-7-spells.html",
