{
  "input": {
    "directory": "./input",
    "filePattern": "**/*.html",
    "encoding": "utf-8"
  },
  "output": {
    "directory": "./output",
    "fileExtension": ".md",
    "preserveStructure": true,
    "createIndex": true,
    "overwrite": true
  },
  "parser": {
    "html": {
      "contentSelector": ".p-article-content",
      "removeSelectors": [],
      "fallbackToBold": true,
      "convertInternalLinks": true,
      "urlMapping": {
        "/sources/dnd/phb-2024/introduction": "players-handbook/01-introduction-welcome-to-adventure.html",
        "/sources/dnd/phb-2024/playing-the-game": "players-handbook/02-chapter-1-playing-the-game.html",
        "/sources/dnd/phb-2024/creating-a-character": "players-handbook/03-chapter-2-creating-a-character.html",
        "/sources/dnd/phb-2024/character-classes": "players-handbook/04-chapter-3-character-classes.html",
        "/sources/dnd/phb-2024/character-origins": "players-handbook/06-chapter-4-character-origins.html",
        "/sources/dnd/phb-2024/feats": "players-handbook/07-chapter-5-feats.html",
        "/sources/dnd/phb-2024/equipment": "players-handbook/08-chapter-6-equipment.html",
        "/sources/dnd/phb-2024/spells": "players-handbook/09-chapter-7-spells.html",
        "/spells": "players-handbook/10-chapter-7-spell-descriptions.html",
        "/monsters": "players-handbook/12-appendix-b-creature-stat-blocks.html",
        "/equipment": "players-handbook/08-chapter-6-equipment.html"
      }
    },
    "markdown": {
      "headingStyle": "atx",
      "codeBlockStyle": "fenced",
      "emDelimiter": "*",
      "strongDelimiter": "**",
      "bulletListMarker": "-",
      "linkStyle": "inlined",
      "frontMatter": true,
      "navigationHeader": true
    },
    "idGenerator": {
      "length": 4,
      "characters": "abcdefghijklmnopqrstuvwxyz0123456789"
    }
  },
  "media": {
    "downloadImages": true,
    "supportedFormats": ["png", "jpg", "jpeg", "webp", "gif"],
    "maxImageSize": 10485760,
    "timeout": 30000,
    "retryAttempts": 3
  },
  "logging": {
    "level": "info",
    "showProgress": true
  }
}
