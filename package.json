{
  "name": "dndbeyond-importer",
  "version": "0.1.0",
  "description": "Convert D&D Beyond HTML sourcebooks to clean, structured Markdown files",
  "author": "Alan Cunha",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "dndb-convert": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "dndb-convert": "tsx src/cli/index.ts",
    "dndb-convert:dist": "node dist/cli.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alancunha26/dndbeyond-importer.git"
  },
  "keywords": [
    "dnd",
    "dndbeyond",
    "markdown",
    "converter",
    "cli",
    "rpg"
  ],
  "bugs": {
    "url": "https://github.com/alancunha26/dndbeyond-importer/issues"
  },
  "homepage": "https://github.com/alancunha26/dndbeyond-importer#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "env-paths": "^3.0.0",
    "fast-glob": "^3.3.3",
    "ora": "^9.0.0",
    "short-unique-id": "^5.3.2",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
